<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="false">


                <LinearLayout
                    android:layout_width="105dp"
                    android:layout_height="150dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/image_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="15dp">


                    <com.softperl.urdunovelscollections.TextviewUtil.UbuntuMediumTextview
                        android:id="@+id/txt_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="An American Marriage"
                        android:textColor="?attr/colorHeading"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                            android:id="@+id/txt_author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7dp"
                            android:maxLines="2"
                            android:text="by Peter Deuvergny"
                            android:textColor="?attr/colorTagline"
                            android:textDirection="locale"
                            android:textSize="11sp" />


                        <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/rating_book"
                            style="@style/Base.Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-14dp"
                            android:layout_marginTop="0dp"
                            android:rating="4"
                            android:scaleX="0.6"
                            android:scaleY="0.6" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                            android:id="@+id/txt_download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7dp"
                            android:maxLines="1"
                            android:text="255,250 ratings"
                            android:textColor="?attr/colorTagline"
                            android:textSize="11sp" />


                        <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                            android:id="@+id/txt_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="255,250 reviews"
                            android:textColor="?attr/colorTagline"
                            android:textSize="11sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/layout_read"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_share_outline"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/read"
                                android:textColor="?attr/colorButton"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_download"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_share"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/download_book"
                                android:textColor="@color/white"
                                android:textSize="12sp" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <com.softperl.urdunovelscollections.TextviewUtil.UbuntuMediumTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/description"
                android:textColor="?attr/colorHeading"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/image_Fav"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:tint="?attr/colorHeading" />
        </LinearLayout>

        <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Peter Deuvergny"
            android:textColor="?attr/colorTagline"
            android:textDirection="locale"
            android:textSize="12sp" />


    </LinearLayout>


</RelativeLayout>