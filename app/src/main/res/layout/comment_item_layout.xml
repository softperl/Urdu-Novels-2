<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="7dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image_profile"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    app:riv_border_color="@color/white"
                    app:riv_border_width="0dip"

                    app:riv_corner_radius="60dip"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="0dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <com.softperl.urdunovelscollections.TextviewUtil.UbuntuMediumTextview
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:maxLines="1"
                            android:text="147 Snooker Club and Fries"
                            android:textColor="@color/lightBlue"
                            android:textSize="15sp" />

                        <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:paddingEnd="6dp"
                            android:text="15 July 2018"
                            android:textColor="@color/lightBlue"
                            android:textSize="10sp"
                            android:visibility="gone" />


                    </LinearLayout>


                    <com.softperl.urdunovelscollections.TextviewUtil.ExpandableTextView
                        android:id="@+id/txt_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"

                        android:text="Roof top Royal Cuisine  is one of the best restaurant from the City having the rating of 4 star &amp; price level is little bit expensive"
                        android:textColor="@color/lightBlue"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>