<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp">


            <com.softperl.urdunovelscollections.CustomUtil.ImageScaleView
                android:id="@+id/image_anchor"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="matrix"
                app:matrixType="top_center" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical"
                android:paddingStart="20dp">


                <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:text="John Andrew"
                    android:textColor="?attr/colorHeading"
                    android:textSize="17sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/rating_author"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-5dp"
                        android:rating="4"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:visibility="visible" />


                    <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                        android:id="@+id/txt_rating"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="0dp"
                        android:text="4.7"
                        android:gravity="center"
                        android:background="@drawable/bg_share"
                        android:textColor="@color/white"
                        android:textSize="10sp" />



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_share"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_share"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="0dp">


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_share"
                        android:tint="?attr/colorTagline"
                        android:visibility="gone" />


                    <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share_author"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:minHeight="50dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                    android:id="@+id/txt_book_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:text="25"
                    android:textColor="?attr/colorHeading"
                    android:textSize="17sp" />


                <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/books"
                    android:textColor="?attr/colorTagline"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                    android:id="@+id/txt_review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:text="45"
                    android:textColor="?attr/colorHeading"
                    android:textSize="17sp" />


                <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/review"
                    android:textColor="?attr/colorTagline"
                    android:textSize="14sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                    android:id="@+id/txt_download_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:text="85"
                    android:textColor="?attr/colorHeading"
                    android:textSize="17sp" />


                <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/download"
                    android:textColor="?attr/colorTagline"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp"
            android:background="?attr/colorTagline" />

        <com.softperl.urdunovelscollections.TextviewUtil.UbuntuMediumTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/about"
            android:textColor="?attr/colorHeading"
            android:textSize="14sp" />

        <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="Peter Deuvergny"
            android:textDirection="locale"
            android:textColor="?attr/colorTagline"
            android:textSize="12sp" />


    </LinearLayout>


</RelativeLayout>