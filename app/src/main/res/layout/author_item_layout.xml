<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="0dp">


    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:id="@+id/layout_author"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:background="@color/yellow"
        app:corner_radius="8dp">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:gravity="center|end"
            android:orientation="vertical"
            android:paddingEnd="15dp">

            <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                android:id="@+id/txt_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical|end"
                android:maxLines="2"
                android:text="Timber"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.softperl.urdunovelscollections.TextviewUtil.UbuntuLightTextview
                android:id="@+id/txt_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical|end"
                android:maxLines="2"
                android:text="16 work"
                android:textColor="@color/white"
                android:textSize="12sp" />


        </LinearLayout>


    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

    <com.softperl.urdunovelscollections.CustomUtil.ImageScaleView
        android:id="@+id/image_cover"
        android:layout_width="70dp"
        android:layout_height="105dp"
        android:scaleType="matrix"
        app:matrixType="top_center" />


</RelativeLayout>