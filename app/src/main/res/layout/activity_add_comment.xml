<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ActivityUtil.AddComment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            layout="@layout/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/bg_edit_text"
                android:gravity="center_vertical"
                android:minHeight="38dp"
                android:minLines="1"
                android:paddingStart="10dp"
                android:textSize="14sp" />

            <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_edit_text"
                android:gravity="center_vertical"
                android:minHeight="38dp"
                android:minLines="1"
                android:paddingStart="10dp"
                android:textSize="14sp" />

            <com.softperl.urdunovelscollections.EditTextUtil.UbuntuRegularEditText
                android:id="@+id/txt_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_edit_text"
                android:gravity="top"
                android:hint="@string/write_comment"
                android:maxLines="6"
                android:minLines="6"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:textSize="14sp" />


            <com.softperl.urdunovelscollections.TextviewUtil.UbuntuMediumTextview
                android:id="@+id/txt_submit"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:background="@drawable/bg_internet"
                android:gravity="center"
                android:minHeight="45dp"
                android:minLines="1"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            ads:adSize="BANNER"
            ads:adUnitId="@string/admob_banner_id"></com.google.android.gms.ads.AdView>


    </LinearLayout>


</RelativeLayout>