<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorCard"
        android:gravity="center"
        android:orientation="vertical">


        <com.softperl.urdunovelscollections.TextviewUtil.UbuntuMediumTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/filter"
            android:textAlignment="center"
            android:textColor="?attr/colorHeading"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layout_book"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_read">


                <ImageView
                    android:id="@+id/image_book_selected"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="3dp"
                    android:layout_marginTop="3dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_selected"
                    android:tint="?attr/colorButton"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/image_book"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/txt_book"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    android:src="@drawable/ic_book" />

                <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                    android:id="@+id/txt_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/ebook"
                    android:textColor="?attr/colorHeading"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_author"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/bg_read">

                <ImageView
                    android:id="@+id/image_author_selected"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="3dp"
                    android:layout_marginTop="3dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_selected"
                    android:tint="?attr/colorButton"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image_author"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/txt_author"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    android:src="@drawable/ic_author" />

                <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
                    android:id="@+id/txt_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/author"
                    android:textColor="?attr/colorHeading"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>


        <com.softperl.urdunovelscollections.TextviewUtil.UbuntuRegularTextview
            android:id="@+id/txt_submit"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_submit"
            android:gravity="center"
            android:text="@string/done"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </LinearLayout>


</RelativeLayout>